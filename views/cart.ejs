<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Add to Cart</title>
  </head>
  <body>
    <%- include("./partials/navber") %> <% if (success_msg.length > 0) { %>
    <div class="fixed top-5 right-5 z-50 animate-slide-down">
      <div
        class="bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg flex items-center gap-3"
      >
        <svg
          class="w-6 h-6 text-white"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 12l2 2 4-4m1-5a9 9 0 11-6.627 15.627A9 9 0 0115 3z"
          ></path>
        </svg>
        <span><%= success_msg %></span>
      </div>
    </div>
    <% } %> <% if (error_msg.length > 0) { %>
    <div class="fixed top-5 right-5 z-50 animate-slide-down">
      <div
        class="bg-red-500 text-white px-6 py-4 rounded-lg shadow-lg flex items-center gap-3"
      >
        <svg
          class="w-6 h-6 text-white"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"
          ></path>
        </svg>
        <span><%= error_msg %></span>
      </div>
    </div>
    <% } %>

    <div class="max-w-5xl mx-auto px-4 py-10">
      <h1 class="text-3xl font-bold mb-6">ðŸ›’ Your Cart</h1>

      <% if (cart && cart.length > 0) { %>
      <div class="grid gap-6">
        <% let total = 0; cart.forEach(item => { const price = Number(item.price
        || 0); total += price; }); %> <% cart.forEach(item => { %>
        <div
          class="flex flex-col sm:flex-row items-center gap-4 bg-white shadow p-4 rounded-lg"
        >
          <% if(item.image) { %>
          <img
            src="data:image/jpg;base64,<%= item.image.toString('base64') %>"
            class="w-24 h-24 object-cover rounded"
          />
          <% } else if (item.imageUrl) { %>
          <img
            src="<%= item.imageUrl %>"
            class="w-24 h-24 object-cover rounded"
          />
          <% } else { %>
          <div
            class="w-24 h-24 bg-gray-200 flex items-center justify-center text-gray-500 text-sm rounded"
          >
            No Image
          </div>
          <% } %>

          <div class="flex-1 text-center sm:text-left">
            <h3 class="text-xl font-semibold">
              <%= item.name || "Unnamed Product" %>
            </h3>
            <p class="text-gray-600">$<%= item.price || 0 %></p>
          </div>

          <form action="/cart/remove" method="POST">
            <input
              type="hidden"
              name="productId"
              value="<%= item._id || '' %>"
            />
            <button type="submit" class="text-red-600 hover:underline">
              Remove
            </button>
          </form>
        </div>
        <% }) %>

        <!-- Total Price Section -->
        <div class="text-right text-xl font-bold mt-6">
          ðŸ§¾ Total: $<%= total %>
        </div>

        <div class="text-right">
          <a
            href="/checkout"
            class="inline-block bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md"
          >
            Proceed to Checkout
          </a>
        </div>
      </div>
      <% } else { %>
      <p class="text-gray-500 text-lg">Your cart is empty.</p>
      <% } %>
    </div>
    <%- include("./partials/footer") %>

    <script>
      setTimeout(() => {
        const toast = document.querySelector(".animate-slide-down");
        if (toast) toast.style.display = "none";
      }, 3000);
    </script>
  </body>
</html>
